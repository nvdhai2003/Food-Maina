<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/res_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.RegisterScreenActivity"
    >

    <ImageView
        android:id="@+id/icon_logo"
        android:layout_width="34dp"
        android:layout_height="23dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="24dp"
        android:background="#fef7ff"
        android:fontFamily="@font/semibold"
        android:text="Skip"
        android:textColor="#FA5A1E" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="205dp"
        android:layout_height="31dp"
        android:layout_below="@id/icon_logo"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/bold"
        android:text="Create an account"
        android:textColor="#1C1C1C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:lineHeight="25dp"
        android:text="Welcome friend, enter your details so lets get\nstarted in ordering food."
        android:textColor="#1C1C1C"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/linear1_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/semibold"
            android:text="Email Address"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_email_res"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/regular"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:text="Password"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_pass_res"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/regular"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:text="Confirm Password"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_conf_pass"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="14sp" />
    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_account"
        android:layout_width="370dp"
        android:layout_height="51dp"
        android:layout_below="@id/linear1_res"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#F9881F"
        android:fontFamily="@font/semibold"
        android:text="Create an account"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_below="@id/btn_create_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/semibold"
        android:text="Login to my account"
        android:textAllCaps="false"
        android:textColor="#FE554A" />

</RelativeLayout>